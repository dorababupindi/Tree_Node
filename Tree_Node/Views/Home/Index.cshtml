<table>
    <tr>
        @*<th><input id="selectall" type="radio" /></th>*@
        <th id="nodeid">Node Id</th>
        <th id="nodename">Node Name</th>
        <th id="parentid">Parent Node Id</th>
        <th id="isactive">Is Active</th>
        <th id="actions">Actions</th>
    </tr>
    @foreach (var row in Model)
    {
        <tr>
            @*<td><input class="child" type="radio" value="@row.NodeId" /></td>*@
            <td>@row.NodeId</td>
            <td>@row.NodeName</td>
            <td>@row.ParentNodeId</td>
            <td>@row.IsActive</td>
            <td><button type="button" class="edit btn btn-primary" data-toggle="modal" data-target="#editmodal" value="@row.NodeId">Edit Parent id</button><button class="delete btn btn-danger" value="@row.NodeId" style="margin-left:10px;">Delete</button></td>

        </tr>

    }
</table>

